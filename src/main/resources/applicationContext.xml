<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
">
	
	
    <context:component-scan base-package="edu.eci.arsw.cinema" />
	<bean id = "InMemoryC" class = "edu.eci.arsw.cinema.persistence.impl.InMemoryCinemaPersistence"> 
		<property name="fil" ref="Filter"></property>
    </bean>
    <bean id="cinemaServices" class="edu.eci.arsw.cinema.services.CinemaServices">
    	<property name="cps" ref="InMemoryC"></property>
    </bean>
    <bean id="Filter" class="edu.eci.arsw.cinema.filter.impl.GenderFilter">
    </bean>
    

    
</beans>